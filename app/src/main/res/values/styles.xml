<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">#0B0B0B</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="Custumtheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/signupColor</item>

    </style>
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>


    <!-- Toast Style -->
    <style name="toastTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="exampleToast">
        <item name="colorBackground">#F3E785</item>
        <item name="textColor">#000</item>
        <item name="strokeColor">#2196F3</item>
        <item name="strokeWidth">30dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>


</resources>